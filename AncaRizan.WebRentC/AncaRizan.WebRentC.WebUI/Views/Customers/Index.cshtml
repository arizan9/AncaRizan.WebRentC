@model IEnumerable<Anca.Rizan.WebRentC.Core.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("CostumerID", "Index", new { sortBy = ViewBag.CostumerIDSort })
        </th>
        <th>
            @Html.ActionLink("FirstName", "Index", new { sortBy = ViewBag.FirstNameSort })
        </th>
        <th>
            @Html.ActionLink("LastName", "Index", new { sortBy = ViewBag.LastNameSort })
        </th>
        <th>
            @Html.ActionLink("BirthDate", "Index", new { sortBy = ViewBag.BirthDateSort })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CostumerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthDate)
        </td>
        <td>
          
                @Html.ActionLink("Edit", "Edit", new { id = item.CostumerID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CostumerID });
            
        </td>
    </tr>
}

</table>
